{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommitsDisabled"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "ignoreUnstable": false,
      "versioning": "loose",
      "matchSourceUrls": [
        "https://codeberg.org{/,}**",
        "https://github.com{/,}**",
        "https://gitlab.com{/,}**",
        "https://iris.radicle.xyz{/,}**",
        "https://seed.radicle.garden{/,}**"
      ]
    }
  ],
  "pre-commit": {
    "enabled": true
  }
}
