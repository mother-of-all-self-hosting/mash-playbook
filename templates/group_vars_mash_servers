  {{
    ([mariadb_identifier ~ '.service'] if mariadb_enabled | default(false) and kanboard_database_mysql_hostname == mariadb_connection_hostname and kanboard_database_type == 'mysql' else [])
    +
    ([postgres_identifier ~ '.service'] if postgres_enabled | default(false) and kanboard_database_postgres_hostname == postgres_connection_hostname and kanboard_database_type == 'postgres' else [])
  }}

