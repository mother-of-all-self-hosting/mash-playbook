answer_enabled: false

answer_identifier: "{{ mash_playbook_service_identifier_prefix }}answer"

answer_base_path: "{{ mash_playbook_base_path }}/{{ mash_playbook_service_base_directory_name_prefix }}answer"

answer_uid: "{{ mash_playbook_uid }}"
answer_gid: "{{ mash_playbook_gid }}"

answer_systemd_required_services_list_auto: |
  {{
    ([mariadb_identifier ~ '.service'] if mariadb_enabled | default(false) and answer_database_mysql_hostname == mariadb_connection_hostname and answer_database_type == 'mysql' else [])
    +
    ([postgres_identifier ~ '.service'] if postgres_enabled | default(false) and answer_database_postgres_hostname == postgres_connection_hostname and answer_database_type == 'postgres' else [])
  }}

answer_systemd_wanted_services_list_auto: |
  {{
    ([(exim_relay_identifier | default('mash-exim-relay')) ~ '.service'] if exim_relay_enabled | default(false) else [])
  }}

answer_container_additional_networks_auto: |
  {{
    ([exim_relay_container_network | default('mash-exim-relay')] if (exim_relay_enabled | default(false) and answer_container_network != exim_relay_container_network) else [])
    +
    ([mariadb_container_network] if mariadb_enabled | default(false) and answer_database_mysql_hostname == mariadb_connection_hostname and answer_container_network != mariadb_container_network and answer_database_type == 'mysql' else [])
    +
    ([mash_playbook_reverse_proxyable_services_additional_network] if mash_playbook_reverse_proxyable_services_additional_network else [])
    +
    ([postgres_container_network] if postgres_enabled | default(false) and answer_database_postgres_hostname == postgres_connection_hostname and answer_container_network != postgres_container_network and answer_database_type == 'postgres' else [])
  }}

answer_container_labels_traefik_enabled: "{{ mash_playbook_traefik_labels_enabled }}"
answer_container_labels_traefik_docker_network: "{{ mash_playbook_reverse_proxyable_services_additional_network }}"

# role-specific:mariadb
answer_database_mysql_hostname: "{{ mariadb_connection_hostname if mariadb_enabled else '' }}"
answer_database_mysql_port: "{{ mariadb_connection_port if mariadb_enabled else '3306' }}"
answer_database_mysql_password: "{{ '%s' | format(mash_playbook_generic_secret_key) | password_hash('sha512', 'm.answer', rounds=655555) | to_uuid }}"
# /role-specific:mariadb

# role-specific:postgres
answer_database_postgres_hostname: "{{ postgres_connection_hostname if postgres_enabled else '' }}"
answer_database_postgres_port: "{{ postgres_connection_port if postgres_enabled else '5432' }}"
answer_database_postgres_password: "{{ '%s' | format(mash_playbook_generic_secret_key) | password_hash('sha512', 'p.answer', rounds=655555) | to_uuid }}"
# /role-specific:postgres

# role-specific:traefik
answer_container_labels_traefik_entrypoints: "{{ traefik_entrypoint_primary }}"
answer_container_labels_traefik_tls_certResolver: "{{ traefik_certResolver_primary }}"
# /role-specific:traefik

