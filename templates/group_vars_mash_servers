fider_gid: "{{ mash_playbook_gid }}"

fider_systemd_wanted_services_list_auto: |
  {{
    ([(exim_relay_identifier | default('mash-exim-relay')) ~ '.service'] if (exim_relay_enabled | default(false) and fider_environment_variables_email_smtp_host == exim_relay_identifier | default('mash-exim-relay')) else [])
  }}

fider_systemd_required_services_list_auto: |
 {{
    ([postgres_identifier ~ '.service'] if postgres_enabled and fider_database_hostname == postgres_connection_hostname else [])
  }}

fider_container_additional_networks_auto: |
  {{
    ([exim_relay_container_network | default('mash-exim-relay')] if (exim_relay_enabled | default(false) and fider_environment_variables_email_smtp_host == exim_relay_identifier | default('mash-exim-relay') and fider_container_network != exim_relay_container_network) else [])
    +
    ([mash_playbook_reverse_proxyable_services_additional_network] if mash_playbook_reverse_proxyable_services_additional_network else [])
    +
    ([postgres_container_network] if postgres_enabled and fider_database_hostname == postgres_connection_hostname and fider_container_network != postgres_container_network else [])
  }}

fider_container_labels_traefik_enabled: "{{ mash_playbook_traefik_labels_enabled }}"
fider_container_labels_traefik_docker_network: "{{ mash_playbook_reverse_proxyable_services_additional_network }}"

fider_environment_variables_jwt_secret: "{{ '%s' | format(mash_playbook_generic_secret_key) | password_hash('sha512', 's.fider', rounds=655555) | to_uuid }}"

# role-specific:exim_relay
fider_email_smtp_enabled: "{{ exim_relay_enabled }}"
fider_environment_variables_email_smtp_host: "{{ exim_relay_identifier if exim_relay_enabled else '' }}"
fider_environment_variables_email_smtp_port: 8025
fider_environment_variables_email_noreply: "{{ exim_relay_sender_address if exim_relay_enabled else '' }}"
# /role-specific:exim_relay

# role-specific:postgres
fider_database_hostname: "{{ postgres_connection_hostname if postgres_enabled else '' }}"
fider_database_port: "{{ postgres_connection_port if postgres_enabled else '5432' }}"
fider_database_password: "{{ '%s' | format(mash_playbook_generic_secret_key) | password_hash('sha512', 'db.fider', rounds=655555) | to_uuid }}"
# /role-specific:postgres

# role-specific:traefik
fider_container_labels_traefik_entrypoints: "{{ traefik_entrypoint_primary }}"
