codimd_enabled: false

codimd_identifier: "{{ mash_playbook_service_identifier_prefix }}codimd"

codimd_base_path: "{{ mash_playbook_base_path }}/{{ mash_playbook_service_base_directory_name_prefix }}codimd"

# Runs as 1500:1500
codimd_uid: "1500"
codimd_gid: "1500"

codimd_systemd_required_services_list_auto: |
  {{
    ([mariadb_identifier ~ '.service'] if mariadb_enabled | default(false) and codimd_database_mysql_hostname == mariadb_connection_hostname and codimd_database_type == 'mysql' else [])
    +
    ([postgres_identifier ~ '.service'] if postgres_enabled | default(false) and codimd_database_postgres_hostname == postgres_connection_hostname and codimd_database_type == 'postgres' else [])
  }}

codimd_systemd_wanted_services_list_auto: |
  {{
    ([(exim_relay_identifier | default('mash-exim-relay')) ~ '.service'] if exim_relay_enabled | default(false) else [])
  }}

codimd_container_additional_networks_auto: |
  {{
    ([exim_relay_container_network | default('mash-exim-relay')] if (exim_relay_enabled | default(false) and codimd_container_network != exim_relay_container_network) else [])
    +
    ([mariadb_container_network] if mariadb_enabled | default(false) and codimd_database_mysql_hostname == mariadb_connection_hostname and codimd_container_network != mariadb_container_network and codimd_database_type == 'mysql' else [])
    +
    ([mash_playbook_reverse_proxyable_services_additional_network] if mash_playbook_reverse_proxyable_services_additional_network else [])
    +
    ([postgres_container_network] if postgres_enabled | default(false) and codimd_database_postgres_hostname == postgres_connection_hostname and codimd_container_network != postgres_container_network and codimd_database_type == 'postgres' else [])
  }}

codimd_environment_variables_cmd_session_secret: "{{ '%s' | format(mash_playbook_generic_secret_key) | password_hash('sha512', 'codimd.s', rounds=655555) | to_uuid }}"

codimd_container_labels_traefik_enabled: "{{ mash_playbook_traefik_labels_enabled }}"
codimd_container_labels_traefik_docker_network: "{{ mash_playbook_reverse_proxyable_services_additional_network }}"

# role-specific:mariadb
codimd_database_mysql_hostname: "{{ mariadb_connection_hostname if mariadb_enabled else '' }}"
codimd_database_mysql_port: "{{ mariadb_connection_port if mariadb_enabled else '3306' }}"
codimd_database_mysql_password: "{{ '%s' | format(mash_playbook_generic_secret_key) | password_hash('sha512', 'db.codimd.ma', rounds=655555) | to_uuid }}"
# /role-specific:mariadb

# role-specific:postgres
codimd_database_postgres_hostname: "{{ postgres_connection_hostname if postgres_enabled else '' }}"
codimd_database_postgres_port: "{{ postgres_connection_port if postgres_enabled else '5432' }}"
codimd_database_postgres_password: "{{ '%s' | format(mash_playbook_generic_secret_key) | password_hash('sha512', 'db.codimd.p', rounds=655555) | to_uuid }}"
# /role-specific:postgres

# role-specific:traefik
codimd_container_labels_traefik_entrypoints: "{{ traefik_entrypoint_primary }}"
codimd_container_labels_traefik_tls_certResolver: "{{ traefik_certResolver_primary }}"
# /role-specific:traefik

