pgadmin_enabled: false

pgadmin_identifier: "{{ mash_playbook_service_identifier_prefix }}pgadmin"

pgadmin_base_path: "{{ mash_playbook_base_path }}/{{ mash_playbook_service_base_directory_name_prefix }}pgadmin"

# pgAdmin runs as the pgadmin user (UID: 5050) in the pgadmin group (GID: 5050) in the container
# See: https://www.pgadmin.org/docs/pgadmin4/latest/container_deployment.html#mapped-files-and-directories
pgadmin_uid: 5050
pgadmin_gid: 5050

pgadmin_systemd_required_services_list_auto: |
  {{
    ([postgres_identifier ~ '.service'] if postgres_enabled else [])
  }}

pgadmin_systemd_wanted_services_list_auto: |
  {{
    ([(exim_relay_identifier | default('mash-exim-relay')) ~ '.service'] if (exim_relay_enabled | default(false) and pgadmin_environment_variables_pgadmin_config_mail_server == exim_relay_identifier | default('mash-exim-relay')) else [])
  }}

pgadmin_container_additional_networks_auto: |
  {{
    ([exim_relay_container_network | default('mash-exim-relay')] if (exim_relay_enabled | default(false) and pgadmin_environment_variables_pgadmin_config_mail_server == exim_relay_identifier | default('mash-exim-relay') and pgadmin_container_network != exim_relay_container_network) else [])
    +
    ([mash_playbook_reverse_proxyable_services_additional_network] if mash_playbook_reverse_proxyable_services_additional_network else [])
    +
    ([postgres_container_network] if postgres_enabled and pgadmin_container_network != postgres_container_network else [])
  }}

pgadmin_container_labels_traefik_enabled: "{{ mash_playbook_traefik_labels_enabled }}"
pgadmin_container_labels_traefik_docker_network: "{{ mash_playbook_reverse_proxyable_services_additional_network }}"

# role-specific:exim_relay
pgadmin_environment_variables_pgadmin_disable_postfix: true
pgadmin_environment_variables_pgadmin_config_mail_server: "{{ exim_relay_identifier if exim_relay_enabled else '' }}"
pgadmin_environment_variables_pgadmin_config_mail_port: "{{ 8025 if exim_relay_enabled else '' }}"
pgadmin_environment_variables_pgadmin_config_security_email_sender: "{{ exim_relay_sender_address if exim_relay_enabled else '' }}"
# /role-specific:exim_relay

# role-specific:postgres
pgadmin_database_hostname: "{{ postgres_connection_hostname if postgres_enabled else '' }}"
pgadmin_database_port: "{{ postgres_connection_port if postgres_enabled else '5432' }}"
pgadmin_database_password: "{{ '%s' | format(mash_playbook_generic_secret_key) | password_hash('sha512', 'pgadmin.db', rounds=655555) | to_uuid }}"
# /role-specific:postgres

# role-specific:traefik
pgadmin_container_labels_traefik_entrypoints: "{{ traefik_entrypoint_primary }}"
