adminer_base_path: "{{ mash_playbook_base_path }}/{{ mash_playbook_service_base_directory_name_prefix }}adminer"

adminer_uid: "{{ mash_playbook_uid }}"
adminer_gid: "{{ mash_playbook_gid }}"

adminer_systemd_required_services_list_auto: |
  {{
    ([clickhouse_identifier ~ '.service'] if clickhouse_enabled | default(false) else [])
    +
    ([mariadb_identifier ~ '.service'] if mariadb_enabled | default(false) else [])
    +
    ([mongodb_identifier ~ '.service'] if mongodb_enabled | default(false) else [])
    +
    ([postgres_identifier ~ '.service'] if postgres_enabled | default(false) else [])
  }}

adminer_container_additional_networks_auto: |
  {{
    ([clickhouse_container_network] if clickhouse_enabled | default(false) and adminer_container_network != clickhouse_container_network else [])
    +
    ([mariadb_container_network] if mariadb_enabled | default(false) and adminer_container_network != mariadb_container_network else [])
    +
    ([mash_playbook_reverse_proxyable_services_additional_network] if mash_playbook_reverse_proxyable_services_additional_network else [])
    +
    ([mongodb_container_network] if mongodb_enabled | default(false) and adminer_container_network != mongodb_container_network else [])
    +
    ([postgres_container_network] if postgres_enabled | default(false) and adminer_container_network != postgres_container_network else [])
  }}

adminer_container_labels_traefik_enabled: "{{ mash_playbook_traefik_labels_enabled }}"
adminer_container_labels_traefik_docker_network: "{{ mash_playbook_reverse_proxyable_services_additional_network }}"

# role-specific:traefik
adminer_container_labels_traefik_entrypoints: "{{ traefik_entrypoint_primary }}"
adminer_container_labels_traefik_tls_certResolver: "{{ traefik_certResolver_primary }}"
