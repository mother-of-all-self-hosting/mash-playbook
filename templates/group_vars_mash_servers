ergo_systemd_required_services_list_auto: |
  {{
    ([mariadb_identifier ~ '.service'] if mariadb_enabled | default(false) and ergo_database_mysql_hostname == mariadb_connection_hostname and ergo_config_datastore_mysql_enabled else [])
  }}

ergo_container_additional_networks_auto: |
  {{
    ([mariadb_container_network] if mariadb_enabled | default(false) and ergo_database_mysql_hostname == mariadb_connection_hostname and ergo_container_network != mariadb_container_network and ergo_config_datastore_mysql_enabled else [])
    +
    ([mash_playbook_reverse_proxyable_services_additional_network] if mash_playbook_reverse_proxyable_services_additional_network else [])
  }}

ergo_container_labels_traefik_enabled: "{{ mash_playbook_traefik_labels_enabled }}"
ergo_container_labels_traefik_docker_network: "{{ mash_playbook_reverse_proxyable_services_additional_network }}"

# role-specific:mariadb
ergo_config_datastore_mysql_enabled: "{{ mariadb_enabled }}"
ergo_database_mysql_hostname: "{{ mariadb_connection_hostname if mariadb_enabled else '' }}"
ergo_database_mysql_port: "{{ mariadb_connection_port if mariadb_enabled else '3306' }}"
ergo_database_mysql_password: "{{ '%s' | format(mash_playbook_generic_secret_key) | password_hash('sha512', 'db.ergo', rounds=655555) | to_uuid }}"
# /role-specific:mariadb

# role-specific:traefik
ergo_container_labels_traefik_tls_certResolver: "{{ traefik_certResolver_primary }}"
ergo_container_labels_traefik_loadbalancer_serverstransport: "{{ traefik_config_tcp_servertransports_default_proxyprotocol_name }}@file"
# /role-specific:traefik

