# role-specific:mumble
########################################################################
#                                                                      #
# mumble                                                               #
#                                                                      #
########################################################################

mumble_enabled: false

mumble_identifier: "{{ mash_playbook_service_identifier_prefix }}mumble"

mumble_base_path: "{{ mash_playbook_base_path }}/{{ mash_playbook_service_base_directory_name_prefix }}mumble"

mumble_uid: "{{ mash_playbook_uid }}"
mumble_gid: "{{ mash_playbook_gid }}"

mumble_systemd_required_services_list_auto: |
  {{
    ([mariadb_identifier ~ '.service'] if mariadb_enabled | default(false) and mumble_database_mysql_hostname == mariadb_connection_hostname and mumble_database_type == 'mysql' else [])
    +
    ([postgres_identifier ~ '.service'] if postgres_enabled | default(false) and mumble_database_postgres_hostname == postgres_connection_hostname and mumble_database_type == 'postgres' else [])
    +
    ([traefik_certs_dumper_identifier + '-wait-for-domain@' + mumble_hostname + '.service'] if traefik_enabled and traefik_certs_dumper_enabled | default(false) else [])
  }}

mumble_container_additional_networks_auto: |
  {{
    ([mariadb_container_network] if mariadb_enabled | default(false) and mumble_database_mysql_hostname == mariadb_connection_hostname and mumble_container_network != mariadb_container_network and mumble_database_type == 'mysql' else [])
    +
    ([mash_playbook_reverse_proxyable_services_additional_network] if mash_playbook_reverse_proxyable_services_additional_network else [])
    +
    ([postgres_container_network] if postgres_enabled | default(false) and mumble_database_postgres_hostname == postgres_connection_hostname and mumble_container_network != postgres_container_network and mumble_database_type == 'postgres' else [])
  }}

# role-specific:mariadb
mumble_database_mysql_hostname: "{{ mariadb_connection_hostname if mariadb_enabled else '' }}"
mumble_database_mysql_port: "{{ mariadb_connection_port if mariadb_enabled | default(false) else '3306' }}"
mumble_database_mysql_password: "{{ '%s' | format(mash_playbook_generic_secret_key) | password_hash('sha512', 'db.mumble', rounds=655555) | to_uuid }}"
# /role-specific:mariadb

# role-specific:postgres
mumble_database_postgres_hostname: "{{ postgres_connection_hostname if postgres_enabled else '' }}"
mumble_database_postgres_port: "{{ postgres_connection_port if postgres_enabled else '5432' }}"
mumble_database_postgres_password: "{{ '%s' | format(mash_playbook_generic_secret_key) | password_hash('sha512', 'db.mumble', rounds=655555) | to_uuid }}"
# /role-specific:postgres

# role-specific:traefik_certs_dumper
mumble_container_additional_volumes_auto: |
  {{
    (
      [
       {
         'src': (traefik_certs_dumper_dumped_certificates_path +  '/' + mumble_hostname + mumble_environment_variables_mumble_config_sslcert),
         'dst': mumble_environment_variables_mumble_config_sslcert,
         'options': 'ro',
       },
       {
         'src': (traefik_certs_dumper_dumped_certificates_path +  '/' + mumble_hostname + mumble_environment_variables_mumble_config_sslkey),
         'dst': mumble_environment_variables_mumble_config_sslkey,
         'options': 'ro',
       },
      ] if traefik_enabled and traefik_certs_dumper_enabled else []
    )
  }}

mumble_environment_variables_mumble_config_sslcert: /certificate.crt
mumble_environment_variables_mumble_config_sslkey: /privatekey.key
# /role-specific:traefik_certs_dumper

########################################################################
#                                                                      #
# /mumble                                                              #
#                                                                      #
########################################################################
# /role-specific:mumble



